<!DOCTYPE html>
<html>
	<%- include('header') -%>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<body class="container">
	<div class="row">
		<div class="col-12 card">
			<form action="/registroUsuariosPost" class="card-body" method="POST">
				<h1>Registrarse</h1>

				<div class="container">
					<div class="row">
						<div class="col-12 col-lg-6">
							<label>Nombre</label>
							<input class="form-control" type="text" name="nombre" required>
						</div>
		
						<div class="col-12 col-lg-6">
							<label>Apellido</label>
							<input class="form-control" type="text" name="apellido" required>
						</div>
		
						<div class="col-12 col-lg-6">
							<label>Cedula</label>
							<input class="form-control" type="number" name="cedula" required>
						</div>
		
						<div class="col-12 col-lg-6">
							<label>Correo</label>
							<input class="form-control" type="email" name="email" required>
						</div>
		
						<div class="col-12 col-lg-6">
							<label>Contrase√±a</label>
							<input class="form-control" type="password" name="contrasena" id='lastChild' required>
						</div>
					</div>
				</div>
				<br>
				<input type="submit" class="btn btn-primary" value='Registrar' id="registro">
				<br>
				<div id='etiquetaIniciarSesion'><br>
					<a href="/loginUsers">Inicia Sesion</a>
				</div>


			</form>
		</div>
	</div>


</body>

</html>