<!DOCTYPE html>
<html>

<head>
	<%- include('header') -%>

<body>
	<%- include('nav') -%>

		<div class="container mt-3">
			<div class="row">
				<div class="col card">
					<form action="" class="card-body">
						<h1 style="font-family: cursive;">Actualizar Usuario</h1>

						<form action="/updateUser/<%=modelo.id%>" class="container" method="post">
							<div class="row">
								<div class="col-6">
									<label style="color: rgb(237, 184, 99);">Nombre</label>
									<input class="form-control" type="text" name="nombre" value="<%=modelo.nombre%>">
								</div>

								<div class="col-6">
									<label style="color: rgb(237, 184, 99);">apellido</label>
									<input class="form-control" type="text" name="apellido"
										value='<%=modelo.apellido%>'>
								</div>

								<div class="col-6">
									<label style="color: rgb(237, 184, 99);">cedula</label>
									<input class="form-control" type="number" name="cedula" value="<%=modelo.cedula%>">
								</div>

								<div class="col-6">
									<label style="color: rgb(237, 184, 99);">Correo</label>
									<input class="form-control" type="email" name="correo" value="<%=modelo.correo%>">
								</div>

								<div class="col-6">
									<label style="color: rgb(237, 184, 99);">Password</label>
									<input class="form-control" type="password" name="password"
										value="<%=modelo.password%>">
								</div>

								<div class="col-12 mt-3">
										<input class="btn btn-primary" type="submit" value='Actualizar'>
										<input class="btn btn-outline-danger" type="button" value='cancelar' onclick="volver()">
								</div>
							</div>

						</form>
					</form>
				</div>
			</div>
		</div>


		<script type="text/javascript">
			function volver() {
				window.location.href = '/usuarios';
			}
		</script>
</body>

</html>